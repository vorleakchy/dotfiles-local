# Unix
alias q='exit'
alias dev='cd ~/dev'
alias ...='../..'

# Todo
alias todo='$EDITOR ~/Dropbox/Work/todo.md'

# Reload ZSH
alias z=". ~/.zshrc | printf '=> Reload ZSH.\n'"

# Dev Tools
alias ru='rubocop'
alias mux='tmuxifier load-session'
alias tl='tmux list-sessions'

# IP addresses
alias localip='ipconfig getifaddr en0'
alias pubip='dig +short myip.opendns.com @resolver1.opendns.com'

# Copy my public key to the pasteboard
alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | printf '=> Public key copied to pasteboard.\n'"

# Ruby
alias be='bundle exec'
alias bu='bundle update'

# Rails
alias r='rails'
alias rc='rails console'
alias rs='rails server'
alias rr='rails routes | fzf-tmux --reverse'
alias taild='tail -f log/development.log'
alias tailt='tail -f log/test.log'

# Postgres
alias pgstart='brew services start postgresql'
alias pgstop='brew services stop postgresql && rm -f /usr/local/var/postgres/postmaster.pid'
alias pgrestart='pgstop && pgstart'

# Utility stuff
alias timestamp='date +%Y%m%d%H%M%S'

# Folder navigation
alias dotf='cd $HOME/dotfiles-local'
alias dotu='cd $HOME/dotfiles'
alias tlayouts='cd ~/Dropbox/Work/tmuxifier-layouts/'

# Terraform
alias tf='terraform'

# Kubernetes
alias kx='kubectx'
alias kp='kubectl get po'
# alias kuc='kubectl exec --stdin --tty $1 -- bash'
